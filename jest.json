{
  "testEnvironment": "node",
  "testPathIgnorePatterns": [
    "/coverage/",
    "/dist/",
    "/generators/",
    "/node_modules/"
  ],
  "moduleDirectories": [
    "src",
    "node_modules"
  ],
  "coveragePathIgnorePatterns": [
    "/__tests__/",
    "/coverage/",
    "/dist/",
    "/generators/",
    "/node_modules/"
  ],
  "coverageDirectory": "./coverage/",
  "coverageReporters": [
    "lcov",
    "html"
  ],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "**/**/*.js"
  ],
  "roots": [
    "generator/src",
    "create-graphql/src",
    "create-graphql-core/src",
    "create-graphql-plugin-mongoose/src",
    "create-graphql-plugin-type/src"
  ],
  "rootDir": "./packages/",
  "verbose": true
}
